<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body p-4 p-md-5">
          <h1 class="mb-3"><%= @post.title %></h1>

          <div class="text-muted mb-4">
            By <%= @post.user.first_name.presence || @post.user.email %> Â·
            <%= @post.created_at.strftime("%d %B %Y") %>
          </div>

          <div class="lead">
            <%= simple_format(@post.content) %>
          </div>
        </div>

        <div class="card-footer bg-white border-0 d-flex gap-3">
          <%= link_to "Back to posts", posts_path, class: "btn btn-outline-secondary" %>

          <% if user_signed_in? %>
            <% if policy(@post).update? %>
              <%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning" %>
            <% end %>

            <% if policy(@post).destroy? %>
              <%= button_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>