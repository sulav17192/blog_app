<h1 class="mb-4">Create New Post</h1>

<%= form_with model: @post, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label fw-bold" %>
    <%= f.text_field :title, class: "form-control form-control-lg", placeholder: "Post title...", required: true %>
  </div>

  <div class="mb-4">
    <%= f.label :content, class: "form-label fw-bold" %>
    <%= f.text_area :content, rows: 10, class: "form-control", placeholder: "Write your post here...", required: true %>
  </div>

  <div class="d-flex gap-3">
    <%= f.submit "Create Post", class: "btn btn-primary btn-lg px-5" %>
    <%= link_to "Cancel", posts_path, class: "btn btn-outline-secondary btn-lg px-5" %>
  </div>
<% end %>