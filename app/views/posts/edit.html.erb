<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header bg-light text-center py-3">
          <h3 class="mb-0">Edit Post</h3>
        </div>

        <div class="card-body p-4 p-md-5">
          <%= form_with model: @post, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :title, class: "form-label fw-medium" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-4">
              <%= f.label :content, class: "form-label fw-medium" %>
              <%= f.text_area :content, rows: 10, class: "form-control" %>
            </div>

            <div class="d-flex gap-3">
              <%= f.submit "Update Post", class: "btn btn-primary" %>
              <%= link_to "Cancel", @post, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>