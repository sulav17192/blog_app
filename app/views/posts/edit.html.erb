<h1 class="mb-4">Edit Post</h1>

<%= form_with model: @post, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label fw-bold" %>
    <%= f.text_field :title, class: "form-control form-control-lg", required: true %>
  </div>

  <div class="mb-4">
    <%= f.label :content, class: "form-label fw-bold" %>
    <%= f.text_area :content, rows: 10, class: "form-control", required: true %>
  </div>

  <div class="d-flex gap-3">
    <%= f.submit "Update Post", class: "btn btn-success btn-lg px-5" %>
    <%= link_to "Cancel", @post, class: "btn btn-outline-secondary btn-lg px-5" %>
  </div>
<% end %>